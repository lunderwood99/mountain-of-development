{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "ignorePatterns": ["./src/reportWebVitals.ts", "./src/setupTests.ts", "./src/react-app-env.d.ts", "./src/reportWebVitals.ts"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off",
        "no-trailing-spaces": ["error", { "skipBlankLines": true }]
    }
}
